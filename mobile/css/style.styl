.lr-touch-container
	padding 0 20px
	box-sizing border-box
	min-height 100% /*Get full height*/
	text-align center
	
	&:before
		content ""
		display inline-block
		vertical-align middle
		width 0
		height 100%
		
		rem(margin-left, -5)
	
	.lr-touch-frame
		text-indent normal
		display inline-block
		vertical-align middle
		width 100%
		padding 30px 0
		max-width 420px
		text-align left
		
		view
		
		label
		input[type="submit"]
			// text-transform uppercase /*this forces every text on label to go UPPERCASE*/
			rem-size(14, 30)

		#loginradius-raas-recaptcha_widget
			> div > div
				margin: 0 auto 15px;
			
		#action-container
			padding-top 30px
			margin-top 30px
			border-top 1px solid #ccc
			position relative
			
			&:before
				content "or"
				display block
				text-align center
				color #ccc
				font-size 14px
				line-height 20px

				position absolute
				top -10px
				left 50%
				margin-left -10px
				
				width 20px
				height 20px
				border-radius 50%
				background #fafafa
				border 1px solid #ccc
				
			&:empty
				display none
				
		.link-box
			padding 15px 0
			margin-top 30px
			border-top 1px solid #eee
			a
				color lr-blue
				
				&:nth-child(2)
					float: right
		
		#error-msg
			padding 15px 0
			
			ul
				list-style none
				li
					display block
					padding 5px 20px
					margin-bottom 5px
					border 1px solid lr-red
					color lr-red
					border-radius 5px
				
		#notice	
			position fixed
			top 0
			right 0
			left 0
			color #fff
			font-weight 700
			background-color rgba(lr-blue, 0.9)
			
			padding 10px 20px
			z-index 10
			
			&.success
				background-color rgba(#7dd056, 0.9)
			
			&.warning
				background-color rgba(lr-red, 0.9)
			
				

