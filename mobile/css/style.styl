// for animations
bezier = cubic-bezier(0.51, 0.01, 0.52, 0.99)

rem-size(sizeValue = 10, line = sizeValue * 1.875)
	font-size (sizeValue)px
	line-height (line)px
	font-size (sizeValue / 10)rem
	line-height (line / 10)rem

rem(selector, sizeValue = 10)
	{selector} (sizeValue)px
	{selector} (sizeValue / 10)rem

appearance()
	-webkit-appearance: none;
	-ms-appearance: none;
	-o-appearance: none;
	-moz-appearance: none;
	appearance: none;

user-select()
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

box-sizing()
	-moz-box-sizing: border-box
	-ms-box-sizing: border-box
	-webkit-box-sizing: border-box
	box-sizing: border-box
	
transition-basic()
	-webkit-transition: all 200ms ease-in-out
	-ms-transition: all 200ms ease-in-out
	transition: all 200ms ease-in-out


// Add a subtle shadow on buttons
button-shade()
	box-shadow  inset 0 1px 0 0 rgba(255,255,255,0.3),
	 inset 0 -10px 20px -1px rgba(0,0,0,0.1),
	 inset 0 -1px 0 rgba(0,0,0,0.1)
	 
	&:hover
		box-shadow inset 0 1px 0 0 rgba(255,255,255,0.3),
		 inset 0 -10px 20px 3px rgba(0,0,0,0.1),
		 inset 0 -1px 0 rgba(0,0,0,0.1),
		 0 5px 5px -2px rgba(0,0,0,0.3)
		 
view($point)
	if $point == large
		@media (max-width: 1180)
			{block}
	else if $point == medium
		@media (max-width: 1250px)
			{block}
	else if $point == small
		@media (max-width: 600px)
			{block}


