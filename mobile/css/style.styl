	color: #fff
	
	.lr-sl-shaded-brick-button
		display: inline-block
		width: 100%
		rem(height, 42)
		rem(line-height, 42)
		border-radius: 4px
		overflow: hidden
		margin-bottom: 15px
		cursor: pointer
		position: relative
		z-index: 1
		/*Effects*/
		button-shade()
		
		border: 1px solid rgba(0, 0, 0, 0.1)
		padding: 0 5px
		rem(padding-left, 52)
		box-sizing()
		user-select()
		transition-basic()
		
		&:after
			/*This gets the data-label and uses it as text*/
			content: attr(data-label)
			display: inline-block
			margin-left: 10px
			@media only screen and (max-width: 320px)
				content: attr(data-label-short)
				
		&:hover
			position: relative
			z-index: 2
				
